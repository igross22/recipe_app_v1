<head>
    <style>
    /* Only necessary if you are using navbar-fixed-top */
    body {
      padding-top: 100px;
    }
  </style>
</head>

<div class="page-header">
  <h1>
    Recipes
    <a href="/recipes/new" class="btn btn-lg btn-success">New Recipe</a>
  </h1>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Cuisine</th>
        <th>Cooking Method</th>
        <th>Cooking Time</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.cuisine_type %></td>
        <td><%= recipe.cooking_method %></td>
        <td><%= recipe.cooking_time %></td>
        <td>
          <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">Show</a>
          <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipe/<%= recipe.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
